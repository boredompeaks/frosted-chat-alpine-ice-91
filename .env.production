# =====================================================================
# CalcIta Production Environment Configuration
# Secure E2EE Messaging Application - Production Settings
# =====================================================================

# Application Settings
NODE_ENV=production
REACT_APP_APP_NAME=CalcIta
REACT_APP_APP_VERSION=1.0.0
REACT_APP_APP_DESCRIPTION="Secure End-to-End Encrypted Messaging"

# Supabase Configuration (Production)
REACT_APP_SUPABASE_URL=https://your-project-ref.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your_anon_key_here
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# Calculator Shell Security
VITE_CALCULATOR_PIN=1337
VITE_ENABLE_CALCULATOR_SHELL=true
VITE_CALCULATOR_BACKDOOR=false

# Encryption Configuration
VITE_ENABLE_ENCRYPTION=true
VITE_ENCRYPTION_ALGORITHM=AES-256-GCM
VITE_RSA_KEY_LENGTH=2048
VITE_KEY_ROTATION_INTERVAL=86400000
VITE_DEFAULT_SESSION_KEY=CalcIta_Default_Bootstrap_Key_2024_Secure_Messaging_AES256

# WebRTC Configuration (Production TURN Servers)
VITE_TURN_SERVER_1=turn:turn1.calcita.app:3478
VITE_TURN_USERNAME_1=calcita_user_1
VITE_TURN_CREDENTIAL_1=your_turn_1_password

VITE_TURN_SERVER_2=turn:turn2.calcita.app:3478
VITE_TURN_USERNAME_2=calcita_user_2
VITE_TURN_CREDENTIAL_2=your_turn_2_password

VITE_TURN_SERVER_3=turn:turn3.calcita.app:3478
VITE_TURN_USERNAME_3=calcita_user_3
VITE_TURN_CREDENTIAL_3=your_turn_3_password

# STUN Servers
VITE_STUN_SERVER_1=stun:stun.l.google.com:19302
VITE_STUN_SERVER_2=stun:stun1.calcita.app:3478
VITE_STUN_SERVER_3=stun:stun2.calcita.app:3478

# Feature Flags
VITE_ENABLE_VOICE_CALLS=true
VITE_ENABLE_VIDEO_CALLS=true
VITE_ENABLE_SCREEN_SHARING=false
VITE_ENABLE_DISAPPEARING_MESSAGES=true
VITE_ENABLE_ONE_TIME_VIEW=true
VITE_ENABLE_MESSAGE_REACTIONS=true
VITE_ENABLE_REPLY_THREADING=true
VITE_ENABLE_TYPING_INDICATORS=true
VITE_ENABLE_READ_RECEIPTS=true
VITE_ENABLE_FILE_SHARING=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_PROGRESSIVE_WEB_APP=true

# Security Settings
VITE_ENABLE_RATE_LIMITING=true
VITE_RATE_LIMIT_MAX_REQUESTS=100
VITE_RATE_LIMIT_WINDOW_MS=900000
VITE_ENABLE_CSP_HEADERS=true
VITE_ENABLE_XSS_PROTECTION=true
VITE_ENABLE_SQL_INJECTION_PROTECTION=true
VITE_ENABLE_CSRF_PROTECTION=true
VITE_SESSION_TIMEOUT=1800000
VITE_FORCE_HTTPS=true
VITE_ENABLE_SECURITY_HEADERS=true

# Database Settings
VITE_ENABLE_REAL_TIME=true
VITE_MAX_MESSAGES_PER_CHAT=10000
VITE_MAX_FILE_SIZE=52428800
VITE_MAX_MEDIA_SIZE=104857600
VITE_ENABLE_MEDIA_COMPRESSION=true
VITE_MEDIA_COMPRESSION_QUALITY=0.8

# Call Service Configuration
VITE_CALL_TIMEOUT=30000
VITE_CALL_RETRY_ATTEMPTS=3
VITE_MAX_CALL_DURATION=3600000
VITE_ENABLE_CALL_RECORDING=false
VITE_ENABLE_CALL_QUALITY_MONITORING=true
VITE_MIN_BITRATE=64000
VITE_MAX_BITRATE=2000000

# Logging and Monitoring
VITE_DEBUG_MODE=false
VITE_ENABLE_CONSOLE_LOGS=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ERROR_REPORTING_URL=https://error-reporting.calcita.app
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=your-analytics-id

# Performance Settings
VITE_ENABLE_CODE_SPLITTING=true
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_IMAGE_OPTIMIZATION=true
VITE_CACHE_DURATION=86400
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_OFFLINE_SUPPORT=true

# UI/UX Settings
VITE_DEFAULT_THEME=ice
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ANIMATIONS=true
VITE_ANIMATION_DURATION=300
VITE_ENABLE_GLASSMORPHISM=true
VITE_GLASSMORPHISM_OPACITY=0.1
VITE_ENABLE_ICE_PARTICLES=true
VITE_ICE_THEME_PRIMARY=#0f172a
VITE_ICE_THEME_SECONDARY=#1e293b
VITE_ICE_THEME_ACCENT=#3b82f6

# Media Configuration
VITE_IMAGE_FORMATS=jpg,png,webp,gif
VITE_VIDEO_FORMATS=mp4,webm,ogg
VITE_AUDIO_FORMATS=mp3,wav,ogg
VITE_DOCUMENT_FORMATS=pdf,txt
VITE_ENABLE_IMAGE_THUMBNAILS=true
VITE_THUMBNAIL_SIZE=150

# Chat Settings
VITE_MAX_CHAT_NAME_LENGTH=50
VITE_MAX_MESSAGE_LENGTH=1000
VITE_MAX_GROUP_MEMBERS=100
VITE_ENABLE_GROUP_CHATS=true
VITE_ENABLE_DIRECT_MESSAGES=true
VITE_ENABLE_CHAT_ARCHIVING=true
VITE_ENABLE_MESSAGE_SEARCH=false
VITE_ENABLE_CONTACT_SYNC=false

# User Settings
VITE_ENABLE_USER_STATUS=true
VITE_ENABLE_AWAY_STATUS=true
VITE_AUTO_AWAY_TIMEOUT=300000
VITE_ENABLE_USER_PREFERENCES=true
VITE_ENABLE_NOTIFICATION_SETTINGS=true
VITE_ENABLE_PRIVACY_CONTROLS=true

# Development/Testing (Disabled in production)
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_TEST_ACCOUNTS=false
VITE_ENABLE_DEBUG_PANEL=false
VITE_MOCK_SERVER_URL=

# API Configuration
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_ENABLE_API_CACHE=true
VITE_API_CACHE_TTL=300000

# Storage Configuration
VITE_ENABLE_LOCAL_STORAGE=true
VITE_ENABLE_INDEXED_DB=true
VITE_MAX_LOCAL_STORAGE_SIZE=10485760
VITE_ENABLE_STORAGE_ENCRYPTION=true

# Backup and Recovery
VITE_ENABLE_MESSAGE_BACKUP=false
VITE_BACKUP_ENCRYPTION_KEY=your_backup_key_here
VITE_ENABLE_AUTO_BACKUP=false
VITE_BACKUP_FREQUENCY=daily

# Compliance and Privacy
VITE_GDPR_COMPLIANCE=true
VITE_DATA_RETENTION_DAYS=2555
VITE_ENABLE_DATA_EXPORT=true
VITE_ENABLE_RIGHT_TO_DELETION=true
VITE_PRIVACY_POLICY_URL=https://calcita.app/privacy
VITE_TERMS_OF_SERVICE_URL=https://calcita.app/terms

# Backup TURN Servers (For redundancy)
VITE_BACKUP_TURN_SERVER_1=turn:backup1.calcita.app:3478
VITE_BACKUP_TURN_USERNAME_1=backup_user_1
VITE_BACKUP_TURN_CREDENTIAL_1=backup_password_1

VITE_BACKUP_TURN_SERVER_2=turn:backup2.calcita.app:3478
VITE_BACKUP_TURN_USERNAME_2=backup_user_2
VITE_BACKUP_TURN_CREDENTIAL_2=backup_password_2

# Content Security Policy
VITE_CSP_SCRIPT_SRC="'self' 'unsafe-inline' https://trusted-cdn.calcita.app"
VITE_CSP_STYLE_SRC="'self' 'unsafe-inline' https://trusted-cdn.calcita.app"
VITE_CSP_IMG_SRC="'self' data: https: http:"
VITE_CSP_CONNECT_SRC="'self' wss: https:"

# Network and Connectivity
VITE_ENABLE_NETWORK_MONITORING=true
VITE_NETWORK_TIMEOUT=10000
VITE_ENABLE_CONNECTION_RECOVERY=true
VITE_MAX_RECONNECTION_ATTEMPTS=5
VITE_RECONNECTION_DELAY=1000

# Loading and Performance
VITE_INITIAL_LOAD_TIMEOUT=15000
VITE_SKELETON_LOADING_TIME=2000
VITE_ENABLE_PROGRESSIVE_LOADING=true
VITE_CHUNK_SIZE_LIMIT=500000

# Security Headers
VITE_X_FRAME_OPTIONS=DENY
VITE_X_CONTENT_TYPE_OPTIONS=nosniff
VITE_X_XSS_PROTECTION=1; mode=block
VITE_STRICT_TRANSPORT_SECURITY=max-age=31536000; includeSubDomains; preload

# Sentry Error Tracking (Optional)
VITE_SENTRY_DSN=your-sentry-dsn-here
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_RELEASE=calcita@1.0.0

# Google Analytics (Optional)
VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X
VITE_GA_ENABLED=false

# Intercom Support (Optional)
VITE_INTERCOM_APP_ID=your-intercom-app-id
VITE_INTERCOM_ENABLED=false

# Redis Configuration (For session management)
REDIS_URL=redis://redis.calcita.app:6379
REDIS_PASSWORD=your_redis_password

# External Services
VITE_CDN_URL=https://cdn.calcita.app
VITE_STATIC_ASSETS_URL=https://assets.calcita.app
VITE_API_BASE_URL=https://api.calcita.app

# Production deployment flags
VITE_BUILD_OPTIMIZATION=true
VITE_SOURCE_MAPS=false
VITE_MINIFY_IMAGES=true
VITE_ENABLE_TREE_SHAKING=true

# Feature rollout
VITE_FEATURE_CALL_V2=false
VITE_FEATURE_END_TO_END_KEY_ROTATION=true
VITE_FEATURE_QUANTUM_RESISTANT=false
VITE_FEATURE_GROUP_ENCRYPTION=false

# Monitoring and Health
VITE_HEALTH_CHECK_URL=https://api.calcita.app/health
VITE_STATUS_PAGE_URL=https://status.calcita.app
VITE_ENABLE_UPTIME_MONITORING=true
VITE_MONITORING_INTERVAL=60000


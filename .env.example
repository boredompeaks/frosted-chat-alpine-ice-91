# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
NODE_ENV=production
VITE_APP_NAME=CalcIta
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# App URL (for redirects and callbacks)
VITE_APP_URL=https://your-app-domain.com

# -----------------------------------------------------------------------------
# Security & Encryption
# -----------------------------------------------------------------------------

# Default PIN for Calculator Shell (Change this for each deployment)
VITE_CALCULATOR_PIN=1337

# Master Encryption Salt (Keep this secret)
VITE_ENCRYPTION_SALT=CalcIta_Salt_2024_Change_This_In_Production

# Default Session Key (Bootstrap key for first-time messages)
VITE_DEFAULT_SESSION_KEY=CalcIta_Default_Bootstrap_Key_2024_Secure_Messaging_AES256

# Key Rotation Interval (in milliseconds - default 24 hours)
VITE_KEY_ROTATION_INTERVAL=86400000

# Session Timeout (in milliseconds - default 30 minutes)
VITE_SESSION_TIMEOUT=1800000

# -----------------------------------------------------------------------------
# WebRTC Configuration (TURN/STUN Servers)
# -----------------------------------------------------------------------------

# Primary STUN Server
VITE_STUN_SERVER_1=stun:stun.l.google.com:19302

# TURN Servers (India-optimized with redundancy)
VITE_TURN_SERVER_1=turn:turn.anyfirewall.com:443?transport=tcp
VITE_TURN_USERNAME_1=webrtc
VITE_TURN_CREDENTIAL_1=webrtc

VITE_TURN_SERVER_2=turn:openrelay.metered.ca:80
VITE_TURN_USERNAME_2=openrelayproject
VITE_TURN_CREDENTIAL_2=openrelayproject

VITE_TURN_SERVER_3=turn:openrelay.metered.ca:443
VITE_TURN_USERNAME_3=openrelayproject
VITE_TURN_CREDENTIAL_3=openrelayproject

# Custom TURN Servers (Optional - Add your own if available)
# VITE_TURN_SERVER_CUSTOM=turn:your-turn-server.com:3478
# VITE_TURN_USERNAME_CUSTOM=username
# VITE_TURN_CREDENTIAL_CUSTOM=password

# -----------------------------------------------------------------------------
# Real-time & WebSocket Configuration
# -----------------------------------------------------------------------------

# Supabase Realtime Configuration
VITE_REALTIME_EVENTS_PER_SECOND=10
VITE_REALTIME_HEARTBEAT_INTERVAL=30000

# Socket.IO Configuration (if using custom signaling server)
# VITE_SOCKET_URL=https://your-signaling-server.com
# VITE_SOCKET_PATH=/socket.io

# -----------------------------------------------------------------------------
# Media & File Upload
# -----------------------------------------------------------------------------

# Maximum file upload size (in bytes - default 50MB)
VITE_MAX_FILE_SIZE=52428800

# Allowed file types (comma-separated)
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,audio/mpeg,audio/wav,application/pdf

# Media compression quality (0-1)
VITE_IMAGE_COMPRESSION_QUALITY=0.8

# Maximum video duration (in seconds)
VITE_MAX_VIDEO_DURATION=300

# -----------------------------------------------------------------------------
# Message Configuration
# -----------------------------------------------------------------------------

# Default message disappear time (in seconds - 0 = never)
VITE_DEFAULT_DISAPPEAR_TIME=0

# Maximum message length (characters)
VITE_MAX_MESSAGE_LENGTH=10000

# Message pagination size
VITE_MESSAGE_PAGE_SIZE=50

# Enable message reactions
VITE_ENABLE_REACTIONS=true

# Enable message replies
VITE_ENABLE_REPLIES=true

# -----------------------------------------------------------------------------
# Presence & Status
# -----------------------------------------------------------------------------

# Presence update interval (in milliseconds)
VITE_PRESENCE_UPDATE_INTERVAL=30000

# Auto-away timeout (in milliseconds - default 5 minutes)
VITE_AUTO_AWAY_TIMEOUT=300000

# Typing indicator timeout (in milliseconds)
VITE_TYPING_TIMEOUT=3000

# -----------------------------------------------------------------------------
# Rate Limiting & Performance
# -----------------------------------------------------------------------------

# API rate limit (requests per minute)
VITE_API_RATE_LIMIT=100

# Maximum concurrent connections
VITE_MAX_CONCURRENT_CONNECTIONS=5

# Request timeout (in milliseconds)
VITE_REQUEST_TIMEOUT=30000

# -----------------------------------------------------------------------------
# Analytics & Monitoring (Optional)
# -----------------------------------------------------------------------------

# Enable analytics (set to 'false' for maximum privacy)
VITE_ENABLE_ANALYTICS=false

# Sentry DSN (Error tracking - Optional)
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics ID (Optional)
# VITE_GA_ID=G-XXXXXXXXXX

# -----------------------------------------------------------------------------
# Development & Debug
# -----------------------------------------------------------------------------

# Enable debug mode (DO NOT use in production)
VITE_DEBUG_MODE=false

# Enable console logs
VITE_ENABLE_CONSOLE_LOGS=false

# Mock data for development
VITE_USE_MOCK_DATA=false

# Disable E2EE for testing (NEVER use in production)
VITE_DISABLE_E2EE=false

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable voice calling
VITE_ENABLE_VOICE_CALLS=true

# Enable video calling
VITE_ENABLE_VIDEO_CALLS=true

# Enable disappearing messages
VITE_ENABLE_DISAPPEARING_MESSAGES=true

# Enable one-time view media
VITE_ENABLE_ONE_TIME_VIEW=true

# Enable calculator shell mode
VITE_ENABLE_CALCULATOR_SHELL=true

# Enable automatic key rotation
VITE_ENABLE_AUTO_KEY_ROTATION=true

# Enable message search
VITE_ENABLE_MESSAGE_SEARCH=false

# Enable group chats
VITE_ENABLE_GROUP_CHATS=false

# -----------------------------------------------------------------------------
# CORS & Security Headers
# -----------------------------------------------------------------------------

# Allowed origins (comma-separated)
VITE_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-app-domain.com

# Content Security Policy
VITE_CSP_ENABLED=true

# CORS credentials
VITE_CORS_CREDENTIALS=true

# -----------------------------------------------------------------------------
# Deployment & Build
# -----------------------------------------------------------------------------

# Build target
VITE_BUILD_TARGET=production

# Source maps (set to 'false' in production)
VITE_SOURCE_MAPS=false

# Bundle analyzer
VITE_ANALYZE_BUNDLE=false

# -----------------------------------------------------------------------------
# Backup & Recovery
# -----------------------------------------------------------------------------

# Enable automatic backups
VITE_ENABLE_AUTO_BACKUP=false

# Backup interval (in milliseconds - default 24 hours)
VITE_BACKUP_INTERVAL=86400000

# -----------------------------------------------------------------------------
# Notifications
# -----------------------------------------------------------------------------

# Enable push notifications
VITE_ENABLE_PUSH_NOTIFICATIONS=false

# Firebase Cloud Messaging (Optional)
# VITE_FCM_API_KEY=your_fcm_api_key
# VITE_FCM_AUTH_DOMAIN=your-app.firebaseapp.com
# VITE_FCM_PROJECT_ID=your-app
# VITE_FCM_STORAGE_BUCKET=your-app.appspot.com
# VITE_FCM_MESSAGING_SENDER_ID=123456789
# VITE_FCM_APP_ID=1:123456789:web:abcdef

# -----------------------------------------------------------------------------
# Notes
# -----------------------------------------------------------------------------
#
# 1. Copy this file to .env for development or .env.production for production
# 2. Replace all placeholder values with actual credentials
# 3. NEVER commit .env files to version control
# 4. Keep SUPABASE_SERVICE_ROLE_KEY secure and only use on backend
# 5. Change default PIN and encryption keys in production
# 6. Enable only the features you need for better security
# 7. Set VITE_DEBUG_MODE=false in production
# 8. Use environment-specific TURN servers for best performance
# 9. Regularly rotate encryption keys (done automatically if enabled)
# 10. Monitor rate limits and adjust based on usage patterns
#
# =============================================================================
